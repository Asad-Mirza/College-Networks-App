<LinearLayout
    android:orientation="vertical"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    xmlns:android="http://schemas.android.com/apk/res/android" >

    <RelativeLayout
        android:background="@color/materialBackground"
        android:padding="4dp"
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="65dp">

        <ImageView
            android:layout_marginLeft="1dp"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:padding="0dp"
            android:layout_centerVertical="true"
            android:id="@+id/closeImageView"
            android:src="@drawable/ic_arrow_back_black_24dp"/>

        <TextView
            android:layout_marginStart="10dp"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="12dp"
           android:textStyle="bold"
            android:maxLines="1"
            android:layout_toEndOf="@+id/closeImageView"
android:text="jhgdghdfhgfhfdgfhgfhgfhgfhgfhfghfhfghfghgfhfghfsghdfshrtshfghngfhrtj"
            android:textColor="@color/materialTextColorPrimary"

            android:textSize="16sp" />
        <TextView
            android:layout_marginEnd="12dp"
            android:padding="1dp"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@id/closeImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:textSize="14sp"
            android:layout_marginRight="5dp"
            android:id="@+id/urlTextView"
            android:maxLines="1"
            android:layout_toLeftOf="@id/textViewOptions"
android:text="jhghj"
            android:textColor="@color/materialTextColorSecondary"/>

        <TextView
            android:layout_marginRight="7dp"
            android:id="@+id/textViewOptions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
           android:layout_centerVertical="true"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:text="&#8942;"
            android:textSize="22sp"
            android:textStyle=""
            android:textColor="@color/materialTextColorPrimary" />


    </RelativeLayout>
    <ProgressBar

        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:id="@+id/progress_bar"

        style="?android:attr/progressBarStyleHorizontal"/>






    <WebView



        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>
