<RelativeLayout
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    xmlns:android="http://schemas.android.com/apk/res/android" >

    <RelativeLayout
        android:background="@color/materialBackground"
        android:padding="4dp"
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="65dp">

        <ImageView
            android:layout_marginLeft="1dp"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:padding="0dp"
            android:layout_centerVertical="true"
            android:id="@+id/closeImageView"
            android:src="@drawable/ic_arrow_back_black_24dp"/>

        <TextView
            android:layout_marginStart="10dp"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/closeImageView"
            android:text="jhgj"
            android:textColor="@color/materialTextColorPrimary"
            android:textSize="16sp" />
        <TextView
            android:padding="1dp"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@id/closeImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:textSize="14sp"
            android:layout_marginRight="5dp"
            android:id="@+id/urlTextView"
            android:maxLines="1"
            android:text="jhghj"
            android:textColor="@color/materialTextColorSecondary"/>



    </RelativeLayout>
    <ProgressBar
        android:layout_below="@id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:id="@+id/progress_bar"

        style="?android:attr/progressBarStyleHorizontal"/>






    <WebView
        android:layout_below="@id/progress_bar"
        android:layout_above="@id/ad"

        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        />
    <ImageView
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"


        android:id="@+id/ad"/>



</RelativeLayout>
