<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/materialBackground"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <include
        layout="@layout/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/app_bar"/>


    <ProgressBar

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progress_bar"
        android:layout_below="@id/app_bar"
        android:indeterminate="true"
        android:visibility="gone"/>

    <TextView
        android:layout_below="@id/app_bar"
        android:layout_marginTop="14dp"
        android:textSize="16sp"
        android:id="@+id/headerText"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="@string/anonyfeedheader"
        android:textColor="@color/materialTextColorSecondary" />
    <EditText
android:layout_below="@id/headerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:lines="2"

        android:maxLines="5"
        android:textSize="16sp"
        android:padding="8dp"
        android:hint="What do you think about your College ?"
        android:id="@+id/feedback_editext"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/ad"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"

        android:layout_alignParentBottom="true"
        android:visibility="gone"


        />
</RelativeLayout>
