<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >


    <RelativeLayout
       android:background="@color/colorPrimary"

         android:layout_width="match_parent"
        android:layout_height="56dp"
        android:id="@+id/app_bar">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Faculty Login"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_centerInParent="true"
            android:textColor="@color/white"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
       android:layout_below="@id/app_bar"
        android:id="@+id/imageView"
        android:src="@drawable/verify"
/>

    <TextView
        android:layout_marginTop="20dp"
       android:layout_below="@id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:textAlignment="center"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:textSize="16sp"
        android:textColor="@color/materialTextColorPrimary"
        android:id="@+id/textview"
        android:text="Your account is under verification\nYou can use this App as a faculty after we verify you\n\nWe will inform you when it is done "/>

    <Button
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign out"
        android:id="@+id/signout"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true"/>
    <Button
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Try Again"
        android:layout_above="@id/signout"
        android:id="@+id/tryagain"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"
 />
</RelativeLayout>
